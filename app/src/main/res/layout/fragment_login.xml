<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/c_FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <ImageView
        android:id="@+id/img_back"
        android:layout_marginLeft="@dimen/dp_25"
        android:src="@mipmap/back_white"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25" />
    <TextView
        android:textColor="@color/c_FA6A13"
        android:textSize="@dimen/sp_16"
        android:text="您好，为了获取更好的服务"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/c_373737"
        android:text="请登录到处旅行"
        android:textSize="@dimen/sp_27"
        android:layout_marginTop="@dimen/dp_104"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/xian"
        android:background="@color/c_FA6A13"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_279"
        android:layout_width="@dimen/dp_329"
        android:layout_height="@dimen/dp_1" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_marginTop="@dimen/dp_244"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/c_636363"
            android:text="+86"
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_20" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_2"
            android:src="@mipmap/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ed_phone"
            android:layout_marginLeft="@dimen/dp_16"
            android:cursorVisible="false"
            android:background="@null"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_22"
            android:hint="请输入手机号码"
            android:textColor="@color/c_FFC8C8C8"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/c_FFC8C8C8"/>
        <Button
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/btn_send"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_FFFEFEFE"
            android:text="发送验证码"
            android:background="@drawable/bg_btn_ea3_d15"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/or_container"
        android:layout_above="@id/ll_container"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/xian_left"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/or"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:text="or"
            android:textColor="@color/c_FFA9A9A9"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/xian_right"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/wechat_login"
        android:layout_marginBottom="@dimen/dp_9"
        android:id="@+id/ll_container"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/umeng_qq"
            android:src="@drawable/umeng_socialize_qq"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/umeng_weibo"
            android:src="@drawable/umeng_socialize_sina"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            />
    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_104"
        android:id="@+id/wechat_login"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_51"
        android:layout_height="@dimen/dp_17"
        android:text="三方登录"
        android:textColor="#FF4DAE46"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:layout_marginLeft="@dimen/dp_83"
        android:id="@+id/tv_protocol"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="@dimen/dp_209"
        android:layout_height="@dimen/dp_18"
        android:text="@string/user_protocol"
        android:textColor="@color/c_FF999999"
        android:textSize="@dimen/sp_13"
        />

</RelativeLayout>

