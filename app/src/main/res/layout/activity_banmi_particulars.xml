<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/ll_container"
    tools:context="com.example.apcnl.travel.activity.BanmiParticularsActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/c_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_FFFFFF">
            <ImageView
                android:id="@+id/img_back"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/back_white"/>
            <TextView
                android:textSize="@dimen/sp_18"
                android:text="@string/banmi_part"
                android:textColor="@color/c_333333"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/share"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@drawable/gra_dedede"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                app:cardMaxElevation="@dimen/dp_10"
                app:cardElevation="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/c_FFFFFF">
                    <ImageView
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        android:id="@+id/banmi_img"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_160" />
                    <TextView
                        android:text="@string/share"
                        android:id="@+id/banmi_name"
                        android:textColor="@color/c_333333"
                        android:layout_toRightOf="@id/banmi_img"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textSize="@dimen/sp_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"/>
                    <TextView
                        android:text="1366人关注"
                        android:id="@+id/banmi_follow"
                        android:layout_below="@id/banmi_name"
                        android:textColor="@color/c_999999"
                        android:layout_toRightOf="@id/banmi_img"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textSize="@dimen/sp_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"/>
                    <ImageView
                        android:id="@+id/img_follow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_19"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@mipmap/follow_unselected"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_18" />
                    <TextView
                        android:textColor="@color/c_999999"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_19"
                        android:text="关注"
                        android:layout_below="@id/img_follow"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    
                    <ImageView
                        android:id="@+id/img_weizhi"
                        android:layout_alignBottom="@id/banmi_img"
                        android:layout_marginBottom="@dimen/dp_28"
                        android:layout_toRightOf="@id/banmi_img"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/zhanweitu_touxiang"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12" />
                    <TextView
                        android:id="@+id/banmi_city"
                        android:text="北京"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_999999"
                        android:layout_toRightOf="@id/img_weizhi"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_alignTop="@id/img_weizhi"/>
                    <ImageView
                        android:id="@+id/img_work"
                        android:layout_alignBottom="@id/banmi_img"
                        android:layout_marginBottom="@dimen/dp_7"
                        android:layout_toRightOf="@id/banmi_img"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/zhanweitu_touxiang"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12" />
                    <TextView
                        android:id="@+id/banmi_work"
                        android:text="北京"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_999999"
                        android:layout_toRightOf="@id/img_weizhi"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_alignTop="@id/img_work"/>
                    <TextView
                        android:layout_marginBottom="@dimen/dp_10"
                        android:id="@+id/banmi_content"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/banmi_img"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!--app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"-->


            <android.support.design.widget.TabLayout
                android:focusableInTouchMode="true"
                android:layout_below="@id/cv"
                android:id="@+id/tab"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabIndicatorColor="@color/c_FA6A13"
                app:tabTextColor="@color/c_999999"
                app:tabSelectedTextColor="@color/c_373737"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_centerHorizontal="true"/>
            <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/vp"-->
                <!--android:layout_marginTop="@dimen/dp_20"-->
                <!--android:layout_below="@id/tab"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_450"/>-->

            <FrameLayout
                android:layout_below="@id/tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fl_container"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
