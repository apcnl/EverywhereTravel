<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:fitsSystemWindows="true"
    android:id="@+id/fa_container"
    tools:context="com.example.apcnl.travel.activity.PathParticularsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_FFFFFF">
        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:background="@color/c_FFFFFF"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_383">
                <ImageView
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:id="@+id/img_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:background="@color/c_80FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_104">
                    <TextView
                        android:text="北京"
                        android:id="@+id/tv_city"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_toRightOf="@id/coordinates"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_marginTop="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:textColor="@color/c_373737"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银座"
                        android:textSize="@dimen/sp_26"/>
                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_marginTop="@dimen/dp_65"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:text="疯狂购物买买买"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/c_636363"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_close"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_40"
                        android:src="@drawable/close"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25" />
                </RelativeLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_below="@id/cv"
            android:id="@+id/rl_container"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_FFFFFF">

            <ImageView
                android:id="@+id/banmi_img"
                android:layout_marginLeft="@dimen/dp_21"
                android:src="@drawable/zhanweitu_touxiang"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52" />
            <TextView
                android:id="@+id/tv_banmi_name"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_373737"
                android:text="@string/banmi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"/>
            <TextView
                android:id="@+id/tv_banmi_work"
                android:textColor="@color/c_636363"
                android:textSize="@dimen/sp_11"
                android:text="@string/banmi_work"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_below="@id/tv_banmi_name"/>
            <TextView
                android:id="@+id/tv_banmi_city"
                android:layout_marginRight="@dimen/dp_12"
                android:text="@string/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_below="@id/rl_container"
            android:id="@+id/tv_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_25"
            android:layout_below="@id/tv_content"
            android:id="@+id/rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/look"
            android:text="@string/look_all"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rlv"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_80"
            android:gravity="center"
            android:layout_below="@id/look"
            android:layout_marginTop="@dimen/dp_37"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_share"
                android:background="@drawable/bg_btn_ea3_d200"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_28">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/share"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_43"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_636363"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@drawable/bg_btn_ea3_d200"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_28">
                <ImageView
                    android:id="@+id/img_collect"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_centerVertical="true"
                    android:src="@drawable/collect_default"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14" />
                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_43"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_636363"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collect_not"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/gra_fff_de"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"/>
    <LinearLayout
        android:id="@+id/ll_container"
        android:gravity="center"
        android:background="@color/c_FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <Button
            android:textColor="@color/c_FA6A13"
            android:textSize="@dimen/sp_15"
            android:text="@string/look_path"
            android:background="@drawable/button_preview"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_38" />
        <Button
            android:layout_marginLeft="@dimen/dp_50"
            android:textColor="@color/c_FFFFFF"
            android:textSize="@dimen/sp_15"
            android:text="28.00"
            android:background="@drawable/button_pay_particulars"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_38" />
    </LinearLayout>
</RelativeLayout>
